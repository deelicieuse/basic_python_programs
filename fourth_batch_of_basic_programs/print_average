# intialize empty number list
numbers = []

# prompt for number via loop
while True:
    try:
        num = float(input("Enter Number: "))

# break loop if input is invalid
    except:
        break 

# append
    numbers.append(num)

# if numbers is not empty
if len(numbers) > 0:
    avg = sum(numbers) / len (numbers) #     compute
    print(f"The average is {avg}.") #     print