# intialize lowest to None
lowest = None

# start loop
while True:
    try:

# prompt for number
         num = int(input("Enter number: "))
    except:
# check if input is invalid
         break

# check if lowest is none or less than none
if lowest is None or num < lowest:
     lowest = num  #     initialize lowest as None

# if lowest is not none
if lowest is not None:
     print(f"The lowest number is {lowest}") #     print
